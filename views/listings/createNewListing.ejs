<h1>Create New Listing</h1>
<h2>Signed in as <%= usernameDisplay %></h2>
<a href="/listings">Listings</a>

<form action="/listings/createNewListing" method="POST">
    <div>
        <label for="listingTitle">listing title</label>
        <input type="text" id="listingTitle" name="listingTitle" required>
    </div>
    <div>
        <label for="listingDescription">listing description</label>
        <input type="text" id="listingDescription" name="listingDescription" required>
    </div>
    <div>
        <label for="listingCategory">listing category</label>
        <select name="listingCategory" id="listingCategory" required>
            <option value=1>Car</option>
            <option value=2>Truck</option>
            <option value=3>Motorcycle</option>
            <option value=4>Bicycle</option>
            <option value=5>ATV</option>
        </select>
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" required>
    </div>
    <div>
        <label for="productConditionRankID">listing item condition</label>
        <select name="productConditionRankID" id="productConditionRankID" required>
            <option value="Brand new">Brand new</option>
            <option value="Slightly Used">Slightly Used</option>
            <option value="Moderately Used">Moderately Used</option>
            <option value="Heavily Used">Heavily Used</option>
            <option value="Broken">Broken</option>
        </select>
      </div>
    <div>
        <label for="city">city</label>
        <input type="text" id="city" name="city" required>
    </div>
    <button type="submit">createListing</button>
</form>